<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="MyTheme" />

    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTheme</item>
        <item name="colorPrimaryDark">@color/colorTheme</item>
        <item name="colorAccent">@color/colorTheme</item>
    </style>

    <!--抽屉布局中的Item-->
    <style name="MyNavigationLinearLayoutItemTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:theme">@style/AppTheme</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>
</resources>
